<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:clickable="false">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:height="90dp"
            android:id="@+id/sonuc"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingRight="25dp"
            android:gravity="top|bottom|right"
            android:hint="@string/entervalue"
            android:textColor="#fff"
            android:background="#ff209de4" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="90dp"
        android:paddingRight="90dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7"
                android:layout_weight="0.5"
                android:id="@+id/b7"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="8"
                android:layout_weight="0.5"
                android:id="@+id/b8"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="9"
                android:layout_weight="0.5"
                android:id="@+id/b9"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="4"
                android:id="@+id/b4"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="5"
                android:id="@+id/b5"
                android:gravity="center_vertical|center_horizontal"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="6"
                android:id="@+id/b6"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="1"
                android:id="@+id/b1"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="2"
                android:id="@+id/b2"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="3"
                android:id="@+id/b3"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="0"
                android:id="@+id/b0"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:id="@+id/bArti"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="#ff723693" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="-"
                android:id="@+id/bEksi"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="#ff723693" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="x"
                android:id="@+id/bCarpi"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="#ff723693" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="/"
                android:id="@+id/bBolu"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="#ff723693" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="="
                android:id="@+id/bEsittir"
                android:layout_weight="0.5"
                android:textStyle="bold"
                android:textSize="@dimen/abc_text_size_title_material"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:background="#fd337c09" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>